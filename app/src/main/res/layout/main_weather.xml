<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <data>
        <import type="com.example.jvmori.myweatherapp.data.current.CurrentWeatherUI" />
        <variable
            name="currentWeather"
            type="CurrentWeatherUI" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/gradient"
        android:orientation="vertical">

        <TextView
            android:id="@+id/city"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="60dp"
            android:fontFamily="@font/maven_pro"
            android:text='@{currentWeather.city, default="Sydney"}'
            android:textAppearance="@style/TextHeadline"
            android:textSize="34sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/date"
            style="@style/TextDefault"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:fontFamily="@font/maven_pro"
            android:text='@{currentWeather.getDate() , default="Thursday 15 April 2019"}'
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/city" />

        <ImageView
            android:id="@+id/icon"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginTop="32dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/date"
            app:srcCompat="@drawable/ic_30" />

        <TextView
            android:id="@+id/mainTemp"
            style="@style/TextHeadline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text='@{currentWeather.mainTemp + "째", default="18째"}'
            android:textSize="80sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/icon" />

        <TextView
            android:id="@+id/windVal"
            style="@style/TextDefault"
            android:layout_width="135dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="32dp"
            android:gravity="center"
            android:text='@{currentWeather.windSpeed + "km/h", default="9km/h"}'
            android:textStyle="bold"
            app:layout_constraintEnd_toStartOf="@+id/humidityVal"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/mainTemp" />

        <TextView
            android:id="@+id/wind"
            style="@style/TextGrayed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:text="@string/wind"
            app:layout_constraintEnd_toEndOf="@+id/windVal"
            app:layout_constraintStart_toStartOf="@+id/windVal"
            app:layout_constraintTop_toBottomOf="@+id/windVal" />

        <TextView
            android:id="@+id/humidityVal"
            style="@style/TextDefault"
            android:layout_width="136dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text='@{currentWeather.humidity + "%", default="70%"}'
            android:textStyle="bold"
            app:layout_constraintEnd_toStartOf="@+id/maxTmpVal"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/windVal"
            app:layout_constraintTop_toTopOf="@+id/windVal" />

        <TextView
            android:id="@+id/humidity"
            style="@style/TextGrayed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:text="@string/humidity"
            app:layout_constraintEnd_toEndOf="@+id/humidityVal"
            app:layout_constraintStart_toStartOf="@+id/humidityVal"
            app:layout_constraintTop_toBottomOf="@+id/humidityVal" />

        <TextView
            android:id="@+id/maxTmpVal"
            style="@style/TextDefault"
            android:layout_width="136dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:gravity="center"
            android:text='@{currentWeather.mainTemp + "째", default ="28째"}'
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/humidityVal"
            app:layout_constraintTop_toTopOf="@+id/humidityVal" />

        <TextView
            android:id="@+id/maxTmp"
            style="@style/TextGrayed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:text="@string/wind"
            app:layout_constraintEnd_toEndOf="@+id/maxTmpVal"
            app:layout_constraintStart_toStartOf="@+id/maxTmpVal"
            app:layout_constraintTop_toBottomOf="@+id/maxTmpVal" />

        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="40dp"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/humidity" />

    </androidx.constraintlayout.widget.ConstraintLayout>


</layout>